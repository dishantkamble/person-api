{
  "git": {
    "commitMessage": "chore: release v${version}"
    "tagName": "v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  },
  "plugins": {
    "@release-it/bumper": {
      "in": {
        "file": "VERSION",
        "type": "text/plain"
      },
      "out": [
        {
          "file": "VERSION",
          "type": "text/plain"
        }
      ]
    },
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  },
  "hooks": {
    "after:bump": "mvn versions:set -DnewVersion=${version} -DgenerateBackupPoms=false --file pom.xml"
  }
}
